# Piri Terraform Variables Template
# 
# INSTRUCTIONS:
# 1. Copy this file to terraform.tfvars
# 2. Replace all placeholder values with your actual values
# 3. For multiline values (like PEM files), use the heredoc syntax shown below
# 4. DO NOT commit terraform.tfvars to git (it contains sensitive data)

# ==========================================
# AWS Configuration
# ==========================================
aws_region = "us-east-1"

# ==========================================
# Installation Configuration
# ==========================================
# Choose ONE of the following installation methods:

# Option A: Install from GitHub release
install_method = "version"
install_source = "v0.0.12"  # Must include the 'v' prefix

# Option B: Install from git branch (uncomment to use)
# install_method = "branch" 
# install_source = "main"     # Can be: main, dev, feature/branch-name, etc.

# ==========================================
# PDP Configuration (Required)
# ==========================================
pdp_lotus_endpoint   = "wss://lotus.spicystorage.tech/rpc/v1"
pdp_contract_address = "0x6170dE2b09b404776197485F3dc6c968Ef948505"

# ==========================================
# Operator Configuration (Required)
# ==========================================
operator_email = "your-email@example.com"  # Your email for contact with the Storacha team

# Registrar URL (Optional - has default)
# registrar_url = "https://staging.registrar.storacha.network"  # Default value

# ==========================================
# Storage Configuration (Optional)
# ==========================================
# EBS volume size in GB (default: 200)
# ebs_volume_size = 200

# ==========================================
# Sensitive Files (Required)
# ==========================================

# Service PEM private key file
# IMPORTANT: Use heredoc syntax to preserve exact formatting
service_pem_content = <<-PEM
-----BEGIN PRIVATE KEY-----
[paste your actual private key content here]
[the key should be exactly as it appears in your .pem file]
-----END PRIVATE KEY-----
PEM

# Wallet hex private key
# For single line values:
wallet_hex_content = "paste-your-wallet-hex-private-key-here"

# Or if your wallet content is multiline:
# wallet_hex_content = <<-WALLET
# paste-your-wallet
# content-here
# WALLET

# ==========================================
# NOTES:
# ==========================================
# 1. The heredoc syntax (<<-EOF ... EOF) preserves newlines and formatting
# 2. The dash in <<-EOF allows indentation of the content
# 3. You can use any delimiter (PEM, WALLET, EOF, etc.)
# 4. Make sure the closing delimiter is on its own line with no trailing spaces
# 5. For future GitHub Actions deployment, these values will move to AWS Secrets Manager